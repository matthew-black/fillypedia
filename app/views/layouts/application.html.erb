<!DOCTYPE html>
<html>
  <head>
    <title>Fillypedia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to"About", about_path %></li>
      <% if logged_in? %>
          <li><%= link_to"Profile", user_path(current_user) %></li>
        <% end %>
      </ul>
      <div class="buttons">

      </div>

    </nav>
    <%= yield %>
  </body>
</html>
